{{!-- HEADER --}}
<header class="jumbotron jumbotron-fluid">
  <div class="container" style="margin-top: 65px">
    <h1 class="display-3" id="yio">You're in Orbit!</h1>
    <p class="lead" id="oss">One small step for man, one giant leap for digital interaction.</p>
    {{#if this.loggedIn}}
    <a href="/clubs" class="btn btn-primary btn-lg su">Find Clubs!</a>
    <a href="/createclub" class="btn btn-primary btn-lg su">Create a club here!</a>
    {{else}}
    <a href="/signup" class="btn btn-primary btn-lg su">Sign Up</a>
    {{/if}}

  </div>

  <div class="container">
    <img id="astro1" src="/../assets/img/Astro1.png" />
  </div>

  <div class="container" id="child-form-1">

    <nav class="navbar navbar-light bg-light  homepage-nav child-nav">
      <form class="form-inline" id="search-form">

        <input class="form-control mr-sm-2" id="stretch" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-primary" id="search-button" type="submit">Search</button>
      </form>
    </nav>
  </div>
</header>

{{!-- BODY CONTENT --}}
<div class="container page-body-container">
  <h2>Welcome {{#if this.loggedIn}}<span class="member-name"></span>{{else}}
    Astronaut!</a>
    {{/if}}</h2>

  <p>Orbit is here to help you gravitate towards clubs and organizations in your area and beyond. All groups and
    events
    on our page provide virtual and spaced out gatherings to make sure our users stay healthy.</p>

  {{#if this.loggedIn}}
  <h3><a href="/clubs">Your Clubs:</a></h3>
  {{else}}
  <h3>Recent Clubs:</h3>
  {{/if}}

  <div class="row">
    {{#each clubs}}
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="card h-100">
        <img class="card-img-top" src="/../assets/img/default_club_img.png" alt="">
        <div class="card-body">
          <h4 class="card-title"><a href="/clubs/{{this.dataValues.id}}">{{this.dataValues.club_name}}</a></h4>
          <p class="card-text">{{this.dataValues.club_description}}</p>
        </div>
        <div class="card-footer">
          {{#if ../this.loggedIn}}
          <a href="/clubs/{{this.dataValues.id}}" class="btn btn-primary float-right px-5">Go!</a>
          {{else}}
          <a href="/clubs/{{this.dataValues.id}}" class="btn btn-primary float-right gravitate"
            data-id="{{this.dataValues.id}}">Gravitate!</a>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <br>

  <h3>Group &amp; Event Categories:</h3>

  <div class="row align-items-center">
    <a class="btn col category-btn align-self-center" href="/clubs/category/art"><i class="fas fa-palette"></i> Art</a>
    <a class="btn col category-btn align-self-center" href="/clubs/category/books"><i class="fas fa-book"></i> Books</a>
    <a class="btn col category-btn align-self-center" href="/clubs/category/film"><i class="fas fa-film"></i> Film &amp;
      TV</a>
  </div>

  <div class="row align-items-center">
    <a class="btn col category-btn align-self-center" href="/clubs/category/food"><i class="fas fa-utensils"></i>
      Food</a>
    <a class="btn col category-btn align-self-center" href="/clubs/category/games"><i class="fas fa-gamepad"></i>
      Games</a>
    <a class="btn col category-btn align-self-center" href="/clubs/category/health"><i class="fas fa-spa"></i> Health
      &amp; Fitness</a>
  </div>

  <div class="row align-items-center">
    <a class="btn col category-btn align-self-center" href="/clubs/category/music"><i class="fas fa-guitar"></i>
      Music</a>
    <a class="btn col category-btn align-self-center" href="/clubs/category/social"><i class="fas fa-comment"></i>
      Social</a>
    <a class="btn col category-btn align-self-center" href="/clubs/category/sports"><i class="fas fa-futbol"></i>
      Sports</a>
  </div>

</div>
